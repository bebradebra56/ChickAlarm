<?xml version="1.0" encoding="utf-8"?>
<!-- ðŸ” Repeating Chicken Pattern Tile -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base light background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFBF0"/>
        </shape>
    </item>
    
    <!-- Subtle feather pattern -->
    <item
        android:top="5dp"
        android:left="5dp">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="oval">
                <size
                    android:width="15dp"
                    android:height="8dp"/>
                <solid android:color="#15FDD835"/>
            </shape>
        </rotate>
    </item>
    
    <item
        android:top="20dp"
        android:left="20dp">
        <rotate
            android:fromDegrees="-30"
            android:toDegrees="-30"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="oval">
                <size
                    android:width="12dp"
                    android:height="6dp"/>
                <solid android:color="#10FF9800"/>
            </shape>
        </rotate>
    </item>
</layer-list>

