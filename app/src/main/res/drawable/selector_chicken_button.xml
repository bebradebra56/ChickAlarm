<?xml version="1.0" encoding="utf-8"?>
<!-- ðŸ” Chicken Button Selector (for interactive elements) -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <solid android:color="#FDD835"/>
            <stroke
                android:width="2dp"
                android:color="#FF9800"/>
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp"/>
        </shape>
    </item>
    
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <solid android:color="#FFEB3B"/>
            <stroke
                android:width="3dp"
                android:color="#FF9800"/>
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp"/>
        </shape>
    </item>
    
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <solid android:color="#FFFFEB3B"/>
            <stroke
                android:width="2dp"
                android:color="#FFD700"/>
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp"/>
        </shape>
    </item>
</selector>

