<?xml version="1.0" encoding="utf-8"?>
<!-- ðŸšï¸ Chicken Coop Background with Wood Texture -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base barn wood color -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#8D6E63"
                android:centerColor="#795548"
                android:endColor="#6D4C41"
                android:type="linear"/>
        </shape>
    </item>
    
    <!-- Vertical wood planks effect -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#15000000"
                android:centerColor="#00000000"
                android:endColor="#15000000"
                android:type="linear"/>
            <size android:width="30dp"/>
        </shape>
    </item>
    
    <!-- Straw on ground -->
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <solid android:color="#FFE082"/>
            <size android:height="40dp"/>
        </shape>
    </item>
</layer-list>

